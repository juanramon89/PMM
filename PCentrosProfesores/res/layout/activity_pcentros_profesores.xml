<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pcentrosprofesores.PCentrosProfesores"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/buttonCentros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonProfesores"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/buttonProfesores"
            android:layout_marginTop="20dp"
            android:text="Centros" />

        <Button
            android:id="@+id/buttonProfesores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonCentros"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Profesores" />

        <Button
            android:id="@+id/buttonPersonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonProfesores"
            android:layout_alignRight="@+id/buttonProfesores"
            android:layout_below="@+id/buttonProfesores"
            android:layout_marginTop="20dp"
            android:text="Personal" />

    </RelativeLayout>

</FrameLayout>

